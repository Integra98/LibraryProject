@model Library.Models.Branch.BranchCreateModel

<h1>Add new Library Asset</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="Add" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Branch Name</label>
                <input asp-for="BranchName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Address</label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Telephone" class="control-label"></label>
                <input asp-for="Telephone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <textarea name="Text1" cols="40" rows="5" asp-for="Description" class="form-control" style="width:400px; height: 100px;" ></textarea>

            </div>
            
            <div class="form-group">
                <input type="submit" value="Add library branch" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to list</a>
</div>